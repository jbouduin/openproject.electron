{
  "api": {
    "type": "object",
    "properties": {
      "apiKey": {
        "type": "string"
      },
      "apiHost": {
        "type": "string",
        "format": "url"
      },
      "apiRoot": {
        "type": "string"
      }
    }
  },
  "log": {
    "type": "object",
    "properties": {
      "levels": {
        "type": "array",
        "items": {
          "type": "object",
          "properties": {
            "logSource": {
              "type": "number",
              "maximum": 2,
              "minimum": 0
            },
            "logLevel": {
              "type": "number",
              "minimum": 0,
              "maximum": 4
            }
          }
        }
      }
    }
  },
  "devtools": {
    "type": "boolean",
    "default": false
  },
  "window": {
    "type": "object",
    "properties": {
      "position": {
        "type": [
          "object",
          "null"
        ],
        "properties": {
          "x": {
            "type": "number"
          },
          "y": {
            "type": "number"
          }
        }
      },
      "size": {
        "type": "object",
        "properties": {
          "height": {
            "type": "number",
            "default": 600
          },
          "width": {
            "type": "number",
            "default": 800
          }
        }
      },
      "maximized": {
        "type": "boolean",
        "default": false
      },
      "minimized": {
        "type": "boolean",
        "default": false
      }
    }
  }
}