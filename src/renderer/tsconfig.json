{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths" : {
      "@core": ["./src/app/@core"],
      "@core/*": ["./src/app/@core/*"],
      "@shared": ["./src/app/@shared"],
      "@shared/*": ["./src/app/@shard/*"],
      "@ipc": ["../ipc"],
      "@ipc/*": ["../ipc*"],
      "@common": ["../common"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2020", // https://github.com/electron/electron/issues/12011
    "types": [
      "../window-interface"
    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2020",
      "dom"
    ]
  }
}
